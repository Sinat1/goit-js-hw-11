{{#each this}}
  <li class='gallery__item'>
    <a class='gallery__card' href='{{largeImageURL}}'>
      <img class="gallery__img" src='{{webformatURL}}' data-source='{{largeImageURL}}' alt='{{tags}}' loading="lazy"/>
      <div class='info'>
        <p class='info-item'>
          <b>Likes: </b>{{likes}}
        </p>
        <p class='info-item'>
          <b>Views: </b>{{views}}
        </p>
        <p class='info-item'>
          <b>Comments: </b>{{comments}}
        </p>
        <p class='info-item'>
          <b>Downloads: </b>{{downloads}}
        </p>
      </div>
    </a>
  </li>
{{/each}}